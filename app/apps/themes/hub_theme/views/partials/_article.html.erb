<div class="content">
  <h1><%= @post.the_title %></h1>
</div>
<div class="article-created-at">
  <i class="fa fa-calendar"></i> <%= @post.created_at.strftime("%B %d, %Y") %>
</div>
<div class="article-thumb">
  <% if @post.has_thumb? %>
    <%= @post.the_thumb %>
  <% end %>
</div>
<div class="">
  <%= raw @post.the_content %>
  <% if @post.render_fields.present? %>
    <%= raw @post.render_fields %>
  <% end %>
</div>
